<h2 class="title is-2">Customers</h2>
<p><%= link_to 'Home', customers_path %></p><br>
<p><%= link_to 'alphabetized action', customers_alphabetized_path %></p><br>
<table class="table">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Phone Number</th>
      <th>Email_address</th>
      <th>Notes</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.full_name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email_address %></td>
        <td><%= customer.notes %></td>
        <% if customer.image.present? %>
          <td class="card-image">
            <figure class="image">
              <%= image_tag customer.image, size: "100x100" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>